<AuthScreen>:
    canvas:
        Rectangle:
            source: 'cover.jpg'
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 4
        AnchorLayout:
            anchor_y: 'top'
            Label:
                text: 'Добро пожаловать.'
                font_size: '32sp'

        AnchorLayout:
            anchor_y: 'center'
            Label:
                text: 'Введите имя для авторизации:'
                font_size: '22sp'
        BoxLayout:
            size_hint: 1, 0.7
            spacing: 50
            padding: [50, 0, 50, 130]
            TextInput:
                multiline: False
        BoxLayout:
            spacing: 100
            padding: [100, 0, 100, 50]
            size_hint: 1, 0.6
            Button:
                text: 'Авторизоваться'
                background_color: (0.3, 0.2, 0.7, 1.0)
                on_press: root.manager.current = 'menu'

<MainScreen>:
    GridLayout:
        rows: 3
        size_hint: 1, 1
        AnchorLayout:
            anchor_y: 'top'
            OneLineListItem:
                text: "Типо сообщение"
                disabled: True
    BoxLayout:
        size_hint: 1, 0.3
        spacing: 100
        padding: [50, 0, 50, 220]
        TextInput:
            multiline: False
    BoxLayout:
        spacing: 100
        padding: [100, 0, 100, 50]
        size_hint: 1, 0.2
        Button:
            text: 'Отправить сообщение'
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.manager.current = 'auth'
    